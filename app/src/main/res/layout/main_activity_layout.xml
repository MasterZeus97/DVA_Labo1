<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/information_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/validation_button"
            android:text="@string/initial_text_main_activity"
            android:textColor="@color/black"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/validation_button"
            android:layout_toEndOf="@id/information_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/validation_button_text"
            android:drawableLeft="@drawable/pencil"/>

    </RelativeLayout>



</RelativeLayout>